{
  "name": "gym-tracker-e2e",
  "version": "1.0.0",
  "description": "Cross-platform E2E testing for Gym Tracker",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "test:ios": "npm run build && node dist/runners/ios.js",
    "test:android": "npm run build && node dist/runners/android.js",
    "test:all": "npm run test:ios && npm run test:android",
    "test:scenario": "npm run build && node dist/cli.js",
    "test:firebase": "npm run build && node dist/firebase/run-tests.js",
    "firebase:setup": "npm run build && node dist/firebase/setup.js",
    "agent:ios": "npm run build && node dist/agents/ios-agent.js",
    "agent:android": "npm run build && node dist/agents/android-agent.js",
    "appium:start": "appium",
    "lint": "eslint src/"
  },
  "dependencies": {
    "yaml": "^2.3.4",
    "webdriverio": "^8.27.0",
    "glob": "^10.3.10",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
